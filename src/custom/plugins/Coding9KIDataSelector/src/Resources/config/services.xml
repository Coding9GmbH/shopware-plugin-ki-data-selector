<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Services -->
        <service id="Coding9\KIDataSelector\Core\Service\SchemaProvider">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Coding9\KIDataSelector\Core\Service\PromptBuilder">
            <argument type="service" id="Coding9\KIDataSelector\Core\Service\SchemaProvider"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="Coding9\KIDataSelector\Core\Service\KiChatGptService">
            <argument type="service" id="Symfony\Contracts\HttpClient\HttpClientInterface"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="monolog.logger"/>
        </service>

        <service id="Coding9\KIDataSelector\Core\Service\SqlValidatorService">
            <argument type="service" id="Coding9\KIDataSelector\Core\Service\SchemaProvider"/>
        </service>

        <service id="Coding9\KIDataSelector\Core\Service\SqlExecutorService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="monolog.logger"/>
        </service>

        <!-- Controller -->
        <service id="Coding9\KIDataSelector\Core\Api\Controller\KiDataController" public="true">
            <argument type="service" id="Coding9\KIDataSelector\Core\Service\PromptBuilder"/>
            <argument type="service" id="Coding9\KIDataSelector\Core\Service\KiChatGptService"/>
            <argument type="service" id="Coding9\KIDataSelector\Core\Service\SqlValidatorService"/>
            <argument type="service" id="Coding9\KIDataSelector\Core\Service\SqlExecutorService"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="monolog.logger"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Subscriber - temporarily disabled -->
        <!--
        <service id="Coding9\KIDataSelector\Core\Subscriber\AdminAclSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
        -->
    </services>
</container>
