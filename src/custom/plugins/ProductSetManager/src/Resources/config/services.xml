<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ProductSetManager\Service\ProductSetService">
            <argument type="service" id="Symfony\Contracts\HttpClient\HttpClientInterface"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="logger"/>
            <argument>http://localhost/api/product-set.php</argument>
        </service>

        <service id="ProductSetManager\Cart\SetDataCollector">
            <argument type="service" id="Symfony\Contracts\HttpClient\HttpClientInterface"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="cache.app"/>
            <tag name="shopware.cart.collector" priority="3000"/>
        </service>

        <service id="ProductSetManager\Cart\SetPriceProcessor">
            <argument type="service" id="logger"/>
            <argument type="service" id="product.repository"/>
            <tag name="shopware.cart.processor" priority="-5000"/>
        </service>

        <service id="ProductSetManager\Subscriber\OrderSubscriber">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="ProductSetManager\Subscriber\CacheInvalidationSubscriber">
            <argument type="service" id="cache.app"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>